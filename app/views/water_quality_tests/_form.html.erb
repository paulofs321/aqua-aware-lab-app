<div class="bg-white p-6 rounded-lg shadow-md mb-8">
  <%= form_with(model: @water_quality_test, local: true) do |form| %>
    <!-- pH -->
    <div class="mb-6">
      <%= form.label :ph, class: "block text-lg font-semibold text-gray-700 mb-2" %>
      <%= form.number_field :ph, step: 0.01, class: "form-input mt-1 block w-full rounded-lg border-2 border-gray-300 bg-gray-100 text-gray-700 focus:ring-blue-500 focus:border-blue-500 p-3", placeholder: "Enter pH level" %>
    </div>

    <!-- ORP -->
    <div class="mb-6">
      <%= form.label :orp, class: "block text-lg font-semibold text-gray-700 mb-2" %>
      <%= form.number_field :orp, step: 0.01, class: "form-input mt-1 block w-full rounded-lg border-2 border-gray-300 bg-gray-100 text-gray-700 focus:ring-blue-500 focus:border-blue-500 p-3", placeholder: "Enter ORP" %>
    </div>

    <!-- UV-Vis Absorbance -->
    <div class="mb-6">
      <%= form.label :uv_vis, class: "block text-lg font-semibold text-gray-700 mb-2" %>
      <%= form.text_field :uv_vis, class: "form-input mt-1 block w-full rounded-lg border-2 border-gray-300 bg-gray-100 text-gray-700 focus:ring-blue-500 focus:border-blue-500 p-3", placeholder: "Enter UV-Vis Absorbance" %>
    </div>

    <!-- Submit Button -->
    <div class="text-center mt-6">
      <%= form.submit "Save Measurements", class: "bg-blue-500 text-white font-semibold py-2 px-4 rounded-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
    </div>
  <% end %>
</div>
